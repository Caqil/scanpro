-- Add new fields to Subscription model
ALTER TABLE "Subscription" ADD COLUMN "midtransSubId" TEXT;
ALTER TABLE "Subscription" ADD COLUMN "midtransOrderId" TEXT;
ALTER TABLE "Subscription" ADD COLUMN "paymentMethod" TEXT;

-- Create Transaction model
CREATE TABLE "Transaction" (
    "id" TEXT NOT NULL,
    "userId" TEXT NOT NULL,
    "midtransOrderId" TEXT NOT NULL,
    "midtransTransId" TEXT,
    "amount" INTEGER NOT NULL,
    "currency" TEXT NOT NULL DEFAULT 'IDR',
    "paymentMethod" TEXT,
    "status" TEXT NOT NULL,
    "subscriptionId" TEXT,
    "metaData" JSONB,
    "createdAt" TIMESTAMP(3) NOT NULL DEFAULT CURRENT_TIMESTAMP,
    "updatedAt" TIMESTAMP(3) NOT NULL,

    CONSTRAINT "Transaction_pkey" PRIMARY KEY ("id")
);

-- Create unique constraint on midtransOrderId
CREATE UNIQUE INDEX "Transaction_midtransOrderId_key" ON "Transaction"("midtransOrderId");

-- Add foreign key constraint to link to User model
ALTER TABLE "Transaction" ADD CONSTRAINT "Transaction_userId_fkey" FOREIGN KEY ("userId") REFERENCES "User"("id") ON DELETE CASCADE ON UPDATE CASCADE;